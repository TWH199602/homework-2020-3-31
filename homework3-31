#include <stdio.h>
#include <time.h>
#include <stdlib.h>


int main(void) {
    
    int i;
    
    int j;
  
    int dis[11]={0};
    
    srand((unsigned int)time(NULL));
    
   
    
    int a[100];
    
    for (int i = 0; i < 100; i++)
    {
        a[i] = rand() % 101;

    }
    for (int i = 0;i < 100;){
        printf("%4d", a[i]);
        i++;
        if (i%10 == 0){
            printf("\n");
        }while (a[i] < 0 || a[i] > 100);
        dis[a[i] / 10]++;
    }

    printf("  100:");
    for (j = 0; j < dis[10]; j++)
        putchar('*');
    putchar('\n');

    for (i = 9; i >= 0; i--)
    {
        printf("%2d-%2d:", i * 10, i * 10 + 9);
        for (j = 0; j < dis[i]; j++)
            putchar('*');
        putchar('\n');
    }

    return 0;

}
