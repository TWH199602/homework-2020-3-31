#include <stdio.h>
#include <time.h>
#include <stdlib.h>


int main(void) {
    
    int i;
    
    int j;
  
    int dis[11]={0};
    
    int c = 0, b;
    
    srand((unsigned int)time(NULL));
    
   
    
    int a[100];
    
    for (int i = 0; i < 100; i++)
    {
        a[i] = rand() % 101;

    }
    for (int i = 0;i < 100;){
        printf("%4d", a[i]);
        i++;
        if (i%10 == 0){
            printf("\n");
        }while (a[i] < 0 || a[i] > 100);
        dis[a[i] / 10]++;
    }
    for (i = 0; i <= 10; i++)
    {
        if (dis[i] > c)
        
            c = b = dis[i];
    }
        for (i = 0; i < c; i++)
    {
        for (j = 0; j <= 10; j++)
    {
        if (dis[j] -b>=0)
            
            printf("*   ");
        
                else
                    printf("    ");
    }
        b--;
        
            putchar('\n');
    }
        for (i = 0; i <= 10; i++)
            
            printf("----");
    
            putchar('\n');
    
        for (i = 0; i <= 10; i++)
        
            printf(" %d ", i * 10);
    
    return 0;
    }

